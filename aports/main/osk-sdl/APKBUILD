pkgname=osk-sdl
pkgver=1
pkgrel=1
pkgdesc="Onscreen Keyboard for Framebuffer"
url="https://github.com/craftyguy/onscreenkeyboard"
arch="all"
license="GPL2"
depends="sdl2_image sdl2 sdl2_ttf cryptsetup-libs"
makedepends="linux-headers sdl2-dev sdl2_image-dev sdl2_ttf cryptsetup-dev"
subpackages=""

#source="https://github.com/craftyguy/${pkgname}/archive/master.tar.gz"
source="osk-sdl.tar.gz"

options="!strip"

build() {
	cd "$srcdir"
	make
}

package() {
	install -D -m755 "$srcdir"/osk-sdl \
		"$pkgdir"/usr/bin/osk-sdl
}
